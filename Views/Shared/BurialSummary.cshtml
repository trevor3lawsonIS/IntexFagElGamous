@{
}

@model Burialmain

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>@Model.Id</h4>
    </div>
    <div class="align-content-center">
        <form method="post" asp-controller="Home" asp-action="Summary" class="btn align-content-center">
            <button type="submit">More Info</button>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
    <div class="card-text p-1">Sex: @Model.Sex</div>
    <div class="card-text p-1">Head Direction: @Model.Headdirection</div>
    <div class="card-text p-1">Depth: @Model.Depth</div>
    <div class="card-text p-1">Adult/Child: @Model.Adultsubadult</div>
    <div class="card-text p-1">Hair Color: @Model.Haircolor</div>
    <div class="card-text p-1">Wrapping: @Model.Wrapping</div>
</div>
