@{
}

@model Burialmain

<style>
    .container {
        display: flex;
        justify-content: space-between;
    }

    .left {
        width: 50%;
    }

    .right {
        width: 50%;
    }
</style>


<div class="card card-outline-primary m-1 p-1 container">
    <div class="left">
        <div class="bg-faded p-1">
            <h4>@Model.Id</h4>
        </div>
        <div class="align-content-center">
            <form method="post" asp-controller="Home" asp-action="Summary" class="btn align-content-center">
                <button type="submit">More Info</button>
                <input type="hidden" asp-for="Id" />
            </form>
        </div>
        <div class="card-text p-1">Sex: @Model.Sex</div>
        <div class="card-text p-1">Head Direction: @Model.Headdirection</div>
        <div class="card-text p-1">Depth: @Model.Depth</div>
        <div class="card-text p-1">Age: @Model.Ageatdeath</div>
        <div class="card-text p-1">Hair Color: @Model.Haircolor</div>
        <div class="card-text p-1">Wrapping: @Model.Wrapping</div>
    </div>
    <div class="right">
        <h4>Location Information</h4>
        <div class="card-text p-1">North-South: @Model.Northsouth</div>
        <div class="card-text p-1">East-West: @Model.Eastwest</div>
        <div class="card-text p-1">SquareNorthSouth: @Model.Squarenorthsouth</div>
        <div class="card-text p-1">SquareEastWest: @Model.Squareeastwest</div>
        <div class="card-text p-1">Area: @Model.Area</div>
        <div class="card-text p-1">Burial Number: @Model.Burialnumber</div>
    </div>
</div>
